{
    "manifest_version": 3,
    "name": "Web Page Summarizer",
    "version": "1.0",
    "description": "Summarizes web pages using OpenAI API",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content-script.js"]
    }],
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "options_page": "options.html"
}